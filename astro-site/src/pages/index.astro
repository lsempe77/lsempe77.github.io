---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-emerald-900 text-white py-20">
    <div class="max-w-5xl mx-auto px-4">
      <div class="flex flex-col md:flex-row items-center gap-10">
        <div class="w-48 h-48 rounded-full bg-slate-700 flex items-center justify-center text-6xl font-bold text-emerald-400 shadow-2xl">
          LS
        </div>
        <div class="text-center md:text-left">
          <h1 class="text-4xl md:text-5xl font-bold mb-3">{profile.name}</h1>
          <p class="text-xl text-emerald-300 mb-6">{profile.role}</p>
          <div class="flex flex-wrap gap-2 justify-center md:justify-start">
            {profile.interests.map(interest => (
              <span class="px-3 py-1 bg-white/10 rounded-full text-sm">{interest}</span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-16 bg-white">
    <div class="max-w-5xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-slate-900 mb-8">About Me</h2>
      <div class="prose prose-lg prose-slate max-w-none">
        {bio.split('\n\n').map(paragraph => (
          <p class="text-slate-600 leading-relaxed mb-4">{paragraph}</p>
        ))}
      </div>
    </div>
  </section>

  <!-- Organizations -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-5xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-slate-900 mb-8">Affiliations</h2>
      <div class="grid md:grid-cols-2 gap-4">
        {profile.organizations.map(org => (
          <a href={org.url} target="_blank" class="block p-4 bg-white rounded-lg border border-slate-200 hover:border-emerald-300 hover:shadow-md transition-all">
            <div class="font-medium text-slate-900">{org.name}</div>
            {org.note && <div class="text-sm text-emerald-600">{org.note}</div>}
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Education -->
  <section class="py-16 bg-white">
    <div class="max-w-5xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-slate-900 mb-8">Education</h2>
      <div class="space-y-6">
        {profile.education.map(edu => (
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-16 h-16 bg-emerald-100 rounded-lg flex items-center justify-center">
              <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
              </svg>
            </div>
            <div>
              <div class="font-semibold text-slate-900">{edu.degree}</div>
              <div class="text-slate-600">{edu.institution} ‚Ä¢ {edu.year}</div>
              <div class="text-sm text-slate-500 mt-1 italic">"{edu.thesis}"</div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Skills -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-5xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-slate-900 mb-8">Skills & Expertise</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {skills.map(skillGroup => (
          <div class="bg-white p-6 rounded-xl border border-slate-200 hover:shadow-md transition-shadow">
            <h3 class="font-semibold text-lg text-slate-900 mb-4 flex items-center gap-2">
              <span>{skillGroup.icon}</span>
              {skillGroup.category}
            </h3>
            <div class="flex flex-wrap gap-2">
              {skillGroup.items.map(skill => (
                <span class="px-3 py-1.5 bg-slate-100 text-slate-700 rounded-full text-sm hover:bg-emerald-100 hover:text-emerald-700 transition-colors">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Languages & Countries -->
  <section class="py-16 bg-white">
    <div class="max-w-5xl mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Languages -->
        <div>
          <h2 class="text-3xl font-bold text-slate-900 mb-8">Languages</h2>
          <div class="flex flex-wrap gap-4">
            {profile.languages.map(lang => (
              <div class="relative w-20 h-20">
                <svg class="w-20 h-20 transform -rotate-90">
                  <circle cx="40" cy="40" r="36" stroke-width="6" fill="none" class="stroke-slate-100"/>
                  <circle cx="40" cy="40" r="36" stroke-width="6" fill="none" class="stroke-emerald-500" 
                    stroke-dasharray={`${lang.level * 2.26} 226`}/>
                </svg>
                <div class="absolute inset-0 flex flex-col items-center justify-center">
                  <span class="text-xs font-medium text-slate-700">{lang.name}</span>
                  <span class="text-xs text-slate-500">{lang.level}%</span>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Country Expertise -->
        <div>
          <h2 class="text-3xl font-bold text-slate-900 mb-8">Country Expertise</h2>
          <div class="flex flex-wrap gap-2">
            {profile.countries.map(country => (
              <span class="px-3 py-1.5 bg-slate-100 text-slate-700 rounded-full text-sm hover:bg-emerald-100 hover:text-emerald-700 transition-colors">
                {country}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
