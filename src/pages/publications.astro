<Layout title="Publications">
  <section class="py-16">
    <div class="max-w-5xl mx-auto px-4">
      <h1 class="text-4xl font-bold text-slate-900 mb-4">Publications</h1>
      <p class="text-xl text-slate-600 mb-12">Peer-reviewed articles, working papers, and reports</p>

      {publications.map(yearGroup => (
        <div class="mb-12">
          <h2 class="text-2xl font-bold text-emerald-600 mb-6 sticky top-20 bg-slate-50 py-2">{yearGroup.year}</h2>
          <div class="space-y-6">
            {yearGroup.items.map(pub => (
              <div class="bg-white p-6 rounded-lg border border-slate-200 hover:shadow-md transition-shadow">
                <h3 class="font-semibold text-slate-900 mb-2">{pub.title}</h3>
                <p class="text-slate-600 text-sm mb-2">{pub.authors}</p>
                <p class="text-emerald-600 text-sm">
                  {pub.journal}{pub.volume && `, ${pub.volume}`}
                </p>
                {pub.doi && (
                  <a href={`https://doi.org/${pub.doi}`} target="_blank" class="text-xs text-slate-500 hover:text-emerald-600 mt-2 inline-block">
                    DOI: {pub.doi}
                  </a>
                )}
              </div>
            ))}
          </div>
        </div>
      ))}

      <!-- Spanish-language Policy Reports Section -->
      <div class="mt-20 pt-12 border-t-2 border-slate-200">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">Informes de Política (Spanish)</h2>
        <p class="text-lg text-slate-600 mb-12">Policy reports, evaluations, and grey literature published in Spanish for Latin American governments and organizations</p>
        
        {policyReports.map(yearGroup => (
          <div class="mb-12">
            <h3 class="text-2xl font-bold text-amber-600 mb-6 sticky top-20 bg-slate-50 py-2">{yearGroup.year}</h3>
