---
import Layout from '../layouts/Layout.astro';

// Profile data
const profile = {
  name: "Lucas Sempé",
  role: "Senior Evaluation Specialist | Research Fellow",
  organizations: [
    { name: "International Initiative for Impact Evaluation (3ie)", url: "https://www.3ieimpact.org/" },
    { name: "University of Oxford, Department of Psychiatry", url: "https://www.psych.ox.ac.uk/", note: "Visiting Fellow" },
    { name: "University of East Anglia", url: "https://www.uea.ac.uk/", note: "Honorary Research Fellow" },
    { name: "Queen Margaret University", url: "https://www.qmu.ac.uk/schools-and-divisions/ighd/", note: "Honorary Research Fellow" },
    { name: "Universidad Católica San Pablo", url: "https://ucsp.edu.pe/investigacion/institutos-centros/cegob/", note: "Visiting Fellow" },
  ],
  interests: [
    "Public Policy & Results-Based Budgeting",
    "Impact Evaluation & Evidence Synthesis",
    "AI/LLMs for Research Automation",
    "Health Systems & Financing",
    "Education Policy & Inequality",
  ],
  education: [
    { degree: "PhD International Development", institution: "University of East Anglia, UK", year: "2024", thesis: "Measurement and effects of wealth inequality and schools. Evidence from PISA" },
    { degree: "MSc Poverty Reduction, Policy and Practice", institution: "SOAS, University of London", year: "2014", thesis: "Appraisal of a learning coaching strategy in Peru in a results-based budgeting rationality" },
  ],
  languages: [
    { name: "Spanish", level: 100 },
    { name: "Portuguese", level: 100 },
    { name: "English", level: 90 },
    { name: "Italian", level: 50 },
    { name: "French", level: 30 },
  ],
  countries: ["Argentina", "Brazil", "Chile", "Colombia", "DRC", "Ecuador", "El Salvador", "Liberia", "Mozambique", "Peru", "United Kingdom"],
};

const skills = [
  {
    category: "Public Policy & Governance",
    items: [
      { name: "Results-Based Budgeting", level: 95 },
      { name: "Civil Service & Public Management", level: 95 },
      { name: "Education Policy", level: 90 },
      { name: "Social Protection", level: 85 },
    ]
  },
  {
    category: "Research Methods",
    items: [
      { name: "Impact Evaluation", level: 100 },
      { name: "Evidence Synthesis", level: 100 },
      { name: "Econometrics", level: 90 },
      { name: "Cost-Benefit Analysis", level: 85 },
    ]
  },
  {
    category: "Programming & Tools",
    items: [
      { name: "R & Stata", level: 95 },
      { name: "Python", level: 85 },
      { name: "SQL", level: 75 },
      { name: "JavaScript", level: 70 },
    ]
  },
  {
    category: "AI & Data Infrastructure",
    items: [
      { name: "LLM Engineering", level: 80 },
      { name: "Vector Databases", level: 80 },
      { name: "Cloud & Deployment", level: 75 },
      { name: "GIS & Spatial", level: 70 },
    ]
  },
];

const bio = `I am a Senior Evaluation Specialist at 3ie and Research Fellow at Queen Margaret University. Before transitioning to research, I spent over a decade in Peru's civil service, where I managed £2 billion in education budgets, led results-based budgeting reforms for the Ministry of Education, and served as political representative to regional governments. I oversaw teacher training programs, school governance systems, and the construction of 215 community centres (Tambos) serving indigenous populations in remote areas.

This public sector experience shapes my research on impact evaluation, evidence synthesis, and policy implementation. My work spans education policy, health systems financing, and social protection across Latin America, Africa, and fragile settings. I combine rigorous methods with practical understanding of how evidence translates into government action.`;
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-emerald-900 text-white py-20">
    <div class="max-w-5xl mx-auto px-4">
      <div class="flex flex-col md:flex-row items-center gap-10">
        <div class="w-48 h-48 rounded-full bg-slate-700 flex items-center justify-center text-6xl font-bold text-emerald-400 shadow-2xl">
          LS
        </div>
        <div class="text-center md:text-left">
          <h1 class="text-4xl md:text-5xl font-bold mb-3">{profile.name}</h1>
          <p class="text-xl text-emerald-300 mb-6">{profile.role}</p>
          <div class="flex flex-wrap gap-2 justify-center md:justify-start">
            {profile.interests.map(interest => (
              <span class="px-3 py-1 bg-white/10 rounded-full text-sm">{interest}</span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-16 bg-white">
    <div class="max-w-5xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-slate-900 mb-8">About Me</h2>
      <div class="prose prose-lg prose-slate max-w-none">
        {bio.split('\n\n').map(paragraph => (
          <p class="text-slate-600 leading-relaxed mb-4">{paragraph}</p>
        ))}
      </div>
    </div>
  </section>

  <!-- Organizations -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-5xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-slate-900 mb-8">Affiliations</h2>
      <div class="grid md:grid-cols-2 gap-4">
        {profile.organizations.map(org => (
          <a href={org.url} target="_blank" class="block p-4 bg-white rounded-lg border border-slate-200 hover:border-emerald-300 hover:shadow-md transition-all">
            <div class="font-medium text-slate-900">{org.name}</div>
            {org.note && <div class="text-sm text-emerald-600">{org.note}</div>}
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Education -->
  <section class="py-16 bg-white">
    <div class="max-w-5xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-slate-900 mb-8">Education</h2>
      <div class="space-y-6">
        {profile.education.map(edu => (
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-16 h-16 bg-emerald-100 rounded-lg flex items-center justify-center">
              <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
              </svg>
            </div>
            <div>
              <div class="font-semibold text-slate-900">{edu.degree}</div>
              <div class="text-slate-600">{edu.institution} • {edu.year}</div>
              <div class="text-sm text-slate-500 mt-1 italic">"{edu.thesis}"</div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Skills -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-5xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-slate-900 mb-8">Skills & Expertise</h2>
      <div class="grid md:grid-cols-2 gap-8">
        {skills.map(skillGroup => (
          <div class="bg-white p-6 rounded-xl border border-slate-200">
            <h3 class="font-semibold text-lg text-slate-900 mb-4">{skillGroup.category}</h3>
            <div class="space-y-3">
              {skillGroup.items.map(skill => (
                <div>
                  <div class="flex justify-between text-sm mb-1">
                    <span class="text-slate-700">{skill.name}</span>
                    <span class="text-slate-500">{skill.level}%</span>
                  </div>
                  <div class="h-2 bg-slate-100 rounded-full overflow-hidden">
                    <div class="h-full bg-emerald-500 rounded-full" style={`width: ${skill.level}%`}></div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Languages & Countries -->
  <section class="py-16 bg-white">
    <div class="max-w-5xl mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Languages -->
        <div>
          <h2 class="text-3xl font-bold text-slate-900 mb-8">Languages</h2>
          <div class="flex flex-wrap gap-4">
            {profile.languages.map(lang => (
              <div class="relative w-20 h-20">
                <svg class="w-20 h-20 transform -rotate-90">
                  <circle cx="40" cy="40" r="36" stroke-width="6" fill="none" class="stroke-slate-100"/>
                  <circle cx="40" cy="40" r="36" stroke-width="6" fill="none" class="stroke-emerald-500" 
                    stroke-dasharray={`${lang.level * 2.26} 226`}/>
                </svg>
                <div class="absolute inset-0 flex flex-col items-center justify-center">
                  <span class="text-xs font-medium text-slate-700">{lang.name}</span>
                  <span class="text-xs text-slate-500">{lang.level}%</span>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Country Expertise -->
        <div>
          <h2 class="text-3xl font-bold text-slate-900 mb-8">Country Expertise</h2>
          <div class="flex flex-wrap gap-2">
            {profile.countries.map(country => (
              <span class="px-3 py-1.5 bg-slate-100 text-slate-700 rounded-full text-sm hover:bg-emerald-100 hover:text-emerald-700 transition-colors">
                {country}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
