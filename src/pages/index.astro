---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get recent blog posts
const allPosts = await getCollection('blog');
const recentPosts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 4);

// Profile data
const profile = {
  name: "Lucas Semp√©",
  role: "Senior Evaluation Specialist | Research Fellow",
  organizations: [
    { name: "International Initiative for Impact Evaluation (3ie)", url: "https://www.3ieimpact.org/" },
    { name: "University of Oxford, Department of Psychiatry", url: "https://www.psych.ox.ac.uk/", note: "Visiting Fellow" },
    { name: "University of East Anglia", url: "https://www.uea.ac.uk/", note: "Honorary Research Fellow" },
    { name: "Queen Margaret University", url: "https://www.qmu.ac.uk/schools-and-divisions/ighd/", note: "Honorary Research Fellow" },
    { name: "Universidad Cat√≥lica San Pablo", url: "https://ucsp.edu.pe/investigacion/institutos-centros/cegob/", note: "Visiting Fellow" },
  ],
  interests: [
    "Public Policy & Results-Based Budgeting",
    "Impact Evaluation & Evidence Synthesis",
    "AI/LLMs for Research Automation",
    "Health Systems & Financing",
    "Education Policy & Inequality",
  ],
  education: [
    { degree: "PhD International Development", institution: "University of East Anglia, UK", year: "2024", thesis: "Measurement and effects of wealth inequality and schools. Evidence from PISA" },
    { degree: "MSc Poverty Reduction, Policy and Practice", institution: "SOAS, University of London", year: "2014", thesis: "Appraisal of a learning coaching strategy in Peru in a results-based budgeting rationality" },
  ],
  languages: [
    { name: "Spanish", level: 100 },
    { name: "Portuguese", level: 100 },
    { name: "English", level: 90 },
    { name: "Italian", level: 50 },
    { name: "French", level: 30 },
  ],
  countries: ["Argentina", "Brazil", "Chile", "Colombia", "DRC", "Ecuador", "El Salvador", "Liberia", "Mozambique", "Peru", "United Kingdom"],
};

const skills = [
  {
    category: "Research Domains",
    icon: "üî¨",
    items: ["Education & Inequality", "Health Systems & Financing", "Ageing & Older People", "Mental Health & NTDs", "Mortality & Epidemiology", "Social Protection"]
  },
  {
    category: "Methods",
    icon: "üìä",
    items: ["Impact Evaluation", "Systematic Reviews", "Mortality Modelling", "Cost-Benefit Analysis", "Econometrics", "Spatial Analysis"]
  },
  {
    category: "Programming & Tools",
    icon: "üíª",
    items: ["R & Stata", "Python", "SQL", "JavaScript/React", "GIS (QGIS, R)", "Git & GitHub"]
  },
  {
    category: "AI & Data",
    icon: "ü§ñ",
    items: ["LLM Engineering", "RAG Systems", "Vector Databases", "Prompt Engineering", "Data Pipelines", "Cloud Deployment"]
  },
  {
    category: "Policy Experience",
    icon: "üèõÔ∏è",
    items: ["Results-Based Budgeting", "Public Sector Management", "Program Evaluation", "Capacity Building", "Stakeholder Engagement", "Policy Translation"]
  },
];

const bio = `Former Peruvian civil servant turned researcher. I spent a decade managing ¬£2B education budgets, leading results-based reforms, and building 215 community centres for indigenous populations. Now I study how evidence translates into government action‚Äîspanning impact evaluation, health financing, and AI for research.`;
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-emerald-900 text-white py-16">
    <div class="max-w-5xl mx-auto px-4">
      <div class="flex flex-col md:flex-row items-center gap-8">
        <div class="w-36 h-36 rounded-full bg-slate-700 flex items-center justify-center text-5xl font-bold text-emerald-400 shadow-2xl border-4 border-emerald-500/30">
          LS
        </div>
        <div class="text-center md:text-left">
          <h1 class="text-4xl md:text-5xl font-bold mb-2">{profile.name}</h1>
          <p class="text-lg text-emerald-300 mb-4">{profile.role}</p>
          <p class="text-slate-300 max-w-2xl text-sm leading-relaxed mb-4">{bio}</p>
          <div class="flex flex-wrap gap-2 justify-center md:justify-start">
            {profile.interests.slice(0, 3).map(interest => (
              <span class="px-2 py-1 bg-white/10 rounded-full text-xs">{interest}</span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Recent Blog Posts -->
  <section class="py-12 bg-white">
    <div class="max-w-5xl mx-auto px-4">
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-2xl font-bold text-slate-900">Recent Posts</h2>
        <a href="/blog" class="text-emerald-600 hover:text-emerald-700 text-sm font-medium">View all ‚Üí</a>
      </div>
      <div class="grid md:grid-cols-2 gap-6">
        {recentPosts.map(post => (
          <a href={`/blog/${post.slug}`} class="group block bg-white rounded-xl hover:shadow-lg transition-all border border-slate-200 hover:border-emerald-300 overflow-hidden">
            <div class="h-40 bg-slate-100 overflow-hidden">
              <img 
                src={`/images/blog/${post.slug}.png`} 
                alt={post.data.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
            </div>
            <div class="p-5">
              <div class="flex gap-2 mb-2">
                {post.data.tags?.slice(0, 2).map((tag: string) => (
                  <span class="text-xs px-2 py-0.5 bg-emerald-100 text-emerald-700 rounded">{tag}</span>
                ))}
              </div>
              <h3 class="font-semibold text-slate-900 group-hover:text-emerald-700 mb-2 line-clamp-2">{post.data.title}</h3>
              <p class="text-sm text-slate-600 line-clamp-2">{post.data.summary}</p>
              <div class="mt-3 text-xs text-slate-400">
                {new Date(post.data.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Affiliations (compact) -->
  <section class="py-10 bg-slate-50">
    <div class="max-w-5xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-slate-900 mb-6">Affiliations</h2>
      <div class="flex flex-wrap gap-3">
        {profile.organizations.map(org => (
          <a href={org.url} target="_blank" class="inline-flex items-center gap-2 px-4 py-2 bg-white rounded-lg border border-slate-200 hover:border-emerald-300 hover:shadow-sm transition-all text-sm">
            <span class="font-medium text-slate-800">{org.name}</span>
            {org.note && <span class="text-emerald-600 text-xs">({org.note})</span>}
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Education -->
  <section class="py-16 bg-white">
    <div class="max-w-5xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-slate-900 mb-8">Education</h2>
      <div class="space-y-6">
        {profile.education.map(edu => (
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-16 h-16 bg-emerald-100 rounded-lg flex items-center justify-center">
              <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
              </svg>
            </div>
            <div>
              <div class="font-semibold text-slate-900">{edu.degree}</div>
              <div class="text-slate-600">{edu.institution} ‚Ä¢ {edu.year}</div>
              <div class="text-sm text-slate-500 mt-1 italic">"{edu.thesis}"</div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Skills -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-5xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-slate-900 mb-8">Skills & Expertise</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {skills.map(skillGroup => (
          <div class="bg-white p-6 rounded-xl border border-slate-200 hover:shadow-md transition-shadow">
            <h3 class="font-semibold text-lg text-slate-900 mb-4 flex items-center gap-2">
              <span>{skillGroup.icon}</span>
              {skillGroup.category}
            </h3>
            <div class="flex flex-wrap gap-2">
              {skillGroup.items.map(skill => (
                <span class="px-3 py-1.5 bg-slate-100 text-slate-700 rounded-full text-sm hover:bg-emerald-100 hover:text-emerald-700 transition-colors">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Languages & Countries -->
  <section class="py-16 bg-white">
    <div class="max-w-5xl mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Languages -->
        <div>
          <h2 class="text-3xl font-bold text-slate-900 mb-8">Languages</h2>
          <div class="flex flex-wrap gap-4">
            {profile.languages.map(lang => (
              <div class="relative w-20 h-20">
                <svg class="w-20 h-20 transform -rotate-90">
                  <circle cx="40" cy="40" r="36" stroke-width="6" fill="none" class="stroke-slate-100"/>
                  <circle cx="40" cy="40" r="36" stroke-width="6" fill="none" class="stroke-emerald-500" 
                    stroke-dasharray={`${lang.level * 2.26} 226`}/>
                </svg>
                <div class="absolute inset-0 flex flex-col items-center justify-center">
                  <span class="text-xs font-medium text-slate-700">{lang.name}</span>
                  <span class="text-xs text-slate-500">{lang.level}%</span>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Country Expertise -->
        <div>
          <h2 class="text-3xl font-bold text-slate-900 mb-8">Country Expertise</h2>
          <div class="flex flex-wrap gap-2">
            {profile.countries.map(country => (
              <span class="px-3 py-1.5 bg-slate-100 text-slate-700 rounded-full text-sm hover:bg-emerald-100 hover:text-emerald-700 transition-colors">
                {country}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
